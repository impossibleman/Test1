<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/button_background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_directory_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="73dp"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/ic_folder_deepblue_24dp"/>

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="73dp"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/ic_insert_drive_file_lightengray_24dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rl_icon"
        android:layout_marginLeft="10dp"
        android:text="file name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_file_name"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:gravity="end"
        android:minWidth="50dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black"/>
</RelativeLayout>